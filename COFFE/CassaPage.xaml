<Page x:Class="COFFE.CassaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:COFFE"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CassaPage">

    <Grid>
        <DataGrid x:Name="CassaDatagrid" AutoGenerateColumns="False" Margin="0,0,10,225" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Сотрудник" Binding="{Binding Employees.Position}"/>
                <DataGridTextColumn Header="Заказ" Binding="{Binding Coffe.Name_Coffe}"/>
                <DataGridTextColumn Header="Количесто" Binding="{Binding Products.Quantity}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
